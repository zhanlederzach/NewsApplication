<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextFeed</item>
        <item name="tabTextColor">#B7B7B7</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="MyCustomTabTextFeed" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>